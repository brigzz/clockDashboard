    <script>
        function showTime() {

            const options = {
                day: 'numeric', month: 'short', year: 'numeric', weekday: 'long'
            }
            let date = new Date();
            const date2 = date.toLocaleDateString('en-SG', options);

            const d = date.toDateString();
            const d1 = new Date('02/08/2020');

            let timeDiff = Math.abs(Date.parse(d) - Date.parse(d1));
            let dayDiff = Math.ceil(timeDiff / (1000 * 3600 * 24));

            var h = date.getHours(); // 0 - 23
            var m = date.getMinutes(); // 0 - 59
            var s = date.getSeconds(); // 0 - 59

            h = (h < 10) ? "0" + h : h;
            m = (m < 10) ? "0" + m : m;
            s = (s < 10) ? "0" + s : s;

            var time = h + "<small>:</small>" + m + "<small>:</small>" + "<small>" + s + "</small>" + " <small>hrs</small>";
            document.getElementById("display-date").innerHTML = date2;
            document.getElementById("display-clock").innerHTML = time;
            document.getElementById("display-dayDiff").innerHTML = `Day: ${dayDiff}`;
            setTimeout(showTime, 1000);
        }
    </script>
